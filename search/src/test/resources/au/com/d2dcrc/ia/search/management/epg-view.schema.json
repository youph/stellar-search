{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of view of an extended property graph meta data",
  "type": "object",
  "required": [
    "name",
    "created",
    "createdBy",
    "status",
    "createdFrom"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "created": {
      "type": "string",
      "format": "date-time"
    },
    "createdBy": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "INDEXING",
        "COMPLETE",
        "DELETING"
      ]
    },
    "createdFrom": {
      "type": "object",
      "required": [
        "graphs",
        "vertices",
        "edges"
      ],
      "properties": {
        "graphs": {
          "type": "string",
          "format": "uri"
        },
        "vertices": {
          "type": "string",
          "format": "uri"
        },
        "edges": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
