{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "An error view",
  "type": "object",
  "required": [
    "path",
    "status",
    "reason",
    "error",
    "message",
    "timestamp"
  ],
  "properties": {
    "path": {
      "type": "string",
      "format": "uri-reference"
    },
    "status": {
      "type": "number"
    },
    "reason": {
      "type": "string"
    },
    "error": {
      "type": "string"
    },
    "message": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    }
  }
}
